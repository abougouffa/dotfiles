[user]
	name = Abdelhak Bougouffa
	email = abougouffa@fedoraproject.org
[diff]
	tool = meld

[credential]
	helper = store

[cola]
	spellcheck = false

[alias]
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"

[color]
	ui = auto

[github]
	user = abougouffa

[pull]
	rebase = true

[core]
	editor = nvim

[init]
	defaultBranch = main

[format]
	signoff = true

[sendemail]
	smtpserver = mail.server.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = user@server.com
	smtppass = password

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
